{
  "kind": "View",
  "with": [
    ["Transition", [
      "return 0",
      {
        "from": "return $.merge(sinks.remove$, sinks.add$)",
        "name": "update",
        "reducer": "return state + value"
      }
    ]]
  ],
  "has": [
    "coucou",
    {
      "kind": "View",
      "has": [
        {
          "kind": "Button",
          "has": "-",
          "with": [
            ["Listener", {
              "from": "return sinks.click$.filter(Boolean).mapTo(-1)",
              "to": "remove$"
            }]
          ],
          "scope": "removeButton"
        },
        {
          "kind": "Button",
          "has": "+",
          "with": [
            ["Listener", {
              "from": "return sinks.click$.filter(Boolean).mapTo(+1)",
              "to": "add$"
            }]
          ],
          "scope": "addButton"
        },
        {
          "kind": "DebugState"
        }
      ]
    }
  ]
}