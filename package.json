{
  "name": "monocycle-seed",
  "version": "1.0.0",
  "description": "A seed to start developing an isomorphic application using monocycle",
  "dependencies": {
    "@cycle/dom": "^20.4.0",
    "@cycle/history": "^6.10.0",
    "@cycle/html": "^2.4.0",
    "@cycle/http": "^14.10.0",
    "@cycle/isolate": "^3.4.0",
    "@cycle/run": "^4.4.0",
    "@cycle/time": "^0.15.0",
    "@f/is-functor": "^1.0.0",
    "babel-core": "^6.26.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-3": "^6.24.1",
    "babelify": "^8.0.0",
    "brfs": "^2.0.1",
    "browser-assert": "^1.2.1",
    "browserify": "^16.2.2",
    "browserify-hmr": "^0.3.6",
    "codemirror": "^5.41.0",
    "csstips": "^0.3.0",
    "csx": "^9.0.0",
    "cycle-onionify": "^6.1.0",
    "envify": "^4.1.0",
    "font-awesome-svg-png": "^1.2.2",
    "handlebars": "^4.0.12",
    "hapi": "^17.5.3",
    "hapi-pino": "^5.0.1",
    "if-env": "^1.0.4",
    "inert": "^5.1.0",
    "lodash": "^4.17.11",
    "module-alias": "^2.1.0",
    "monocycle": "https://github.com/Gastonite/monocycle.git#dev",
    "ms": "^2.1.1",
    "nodemailer": "^4.6.8",
    "npm-run-all": "^4.1.3",
    "parallelshell": "^3.0.2",
    "ramda": "^0.25.0",
    "sanctuary": "^0.15.0",
    "snabbdom-merge": "https://github.com/Gastonite/snabbdom-merge.git#dev",
    "typestyle": "^2.0.1",
    "uglifyify": "^5.0.1",
    "xstream": "^11.7.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      "brfs"
    ]
  },
  "quokka": {
    "node": "~/.nvm/current/bin/node"
  },
  "_moduleAliases": {
    "component": "./src/component",
    "drivers": "./drivers",
    "components": "./src/components",
    "utilities": "./src/utilities",
    "predicates": "./src/predicates",
    "style": "./src/style"
  },
  "scripts": {
    "watch": "node server/dev.js",
    "dev": "npm run build:dev && npm run start:dev",
    "open": "nohup xdg-open \"http://$HOSTNAME:8080\" &>/dev/null &",
    "prod": "npm run build:prod && npm run start:prod",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "DEBUG=* node -r dotenv/config server",
    "start:prod": "NODE_ENV=production node server",
    "browserify": "browserify -e src/index.js -o public/bundle.js",
    "build": "if-env NODE_ENV=production && npm run build:prod || npm run build:dev",
    "build:dev": "npm-run-all -l clean --parallel build:dev:*",
    "build:dev:script": "npm run browserify -- --debug --full-paths",
    "build:dev:images": "npm run copyImages",
    "build:dev:fonts": "npm run copyFonts",
    "build:prod": "npm-run-all -l clean --parallel build:prod:*",
    "build:prod:script": "NODE_ENV=production npm run browserify -- -g uglifyify -g envify",
    "build:prod:images": "npm run copyImages",
    "build:prod:fonts": "npm run copyFonts",
    "clean": "rm -fr public && mkdir public",
    "copyImages": "mkdir -p src/images && find src/images -name *.svg -o -name *.jpg -o -name *.png -o -name *.webp | while read -r i; do cp \"$i\" public/; done",
    "copyFonts": "mkdir -p src/fonts && find src/fonts -name *.ttf -o -name *.woff2 -o -name *.woff -o -name *.eot -o -name *.svg -o -name *.otf | while read -r i; do cp \"$i\" public/; done",
    "test": "echo \"Error: no tests for the moment :)\" && exit 1",
    "disc": "discify public/bundle.js > disc.html",
    "reinstall": "rm -fr node_modules && npm i"
  },
  "author": "Cl√©ment Pasquier <clement@n00sphere.net>",
  "license": "ISC",
  "devDependencies": {
    "budo": "^11.3.2",
    "cycle-restart": "^0.2.3",
    "disc": "^1.3.3",
    "dotenv": "^6.0.0"
  }
}
